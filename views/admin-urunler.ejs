<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>√úr√ºn Y√∂netimi - Admin Panel</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/buttons.css">
</head>

<body>
    <header>
        <div class="container">
            <div class="header-content">
                <div>
                    <h1>üíé Dilo≈üun Takƒ± D√ºnyasƒ± - Admin Panel</h1>
                </div>
                <div class="user-menu">
                    <div class="user-info">
                        <span class="user-name">
                            <%= kullanici.ad ? kullanici.ad + ' ' + (kullanici.soyad || '' ) : kullanici.email %>
                                <span class="badge-admin">Admin</span>
                        </span>
                        <div class="header-links">
                            <a href="/">Ana Sayfa</a>
                            <a href="/logout">√áƒ±kƒ±≈ü Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="admin-nav">
            <a href="/admin" class="nav-item">Dashboard</a>
            <a href="/admin/urunler" class="nav-item active">√úr√ºnler</a>
            <a href="/admin/urun/ekle" class="nav-item">√úr√ºn Ekle</a>
            <a href="/admin/kullanicilar" class="nav-item">Kullanƒ±cƒ±lar</a>
            <a href="/admin/siparisler" class="nav-item">Sipari≈üler</a>
        </div>

        <div class="admin-content">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                <h2
                    style="font-family: 'Playfair Display', serif; color: #F4E4BC; background: linear-gradient(135deg, #D4AF37 0%, #C0C0C0 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    √úr√ºn Y√∂netimi
                </h2>
                <a href="/admin/urun/ekle" class="btn btn-primary" style="text-decoration: none;">
                    <span>‚ûï</span>
                    <span>Yeni √úr√ºn Ekle</span>
                </a>
            </div>

            <% if (urunler.length===0) { %>
                <p style="color: #C0C0C0;">Hen√ºz √ºr√ºn eklenmemi≈ü.</p>
                <% } else { %>
                    <div style="margin-bottom: 20px;">
                        <input type="text" id="urun-arama" placeholder="√úr√ºn kodu veya √ºr√ºn adƒ± ile ara..."
                            style="width: 100%; padding: 12px; border-radius: 10px; border: 1px solid rgba(212, 175, 55, 0.3); background: rgba(26, 26, 26, 0.6); color: #F4E4BC; font-size: 1rem;">
                    </div>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>√úr√ºn Kodu</th>
                                <th>√úr√ºn Adƒ±</th>
                                <th>T√ºr</th>
                                <th>Materyal</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody id="urun-tbody">
                            <% urunler.forEach(urun=> { %>
                                <tr style="cursor: pointer;" onclick='showProductDetail(<%= JSON.stringify(urun) %>)'>
                                    <td>
                                        <%= urun.id %>
                                    </td>
                                    <td><span
                                            style="font-family: 'Courier New', monospace; color: #D4AF37; font-weight: 600;">
                                            <%= urun.urun_kodu || '-' %>
                                        </span></td>
                                    <td>
                                        <%= urun.ad %>
                                    </td>
                                    <td>
                                        <%= urun.tur.charAt(0).toUpperCase() + urun.tur.slice(1) %>
                                    </td>
                                    <td>
                                        <%= urun.materyal.charAt(0).toUpperCase() + urun.materyal.slice(1) %>
                                    </td>
                                    <td>
                                        <%= urun.fiyat.toLocaleString('tr-TR') %> ‚Ç∫
                                    </td>
                                    <td>
                                        <%= urun.stok %>
                                    </td>
                                    <td onclick="event.stopPropagation()">
                                        <a href="/admin/urun/guncelle/<%= urun.id %>" class="btn btn-success"
                                            style="text-decoration: none; display: inline-flex; align-items: center; gap: 6px; margin-right: 5px;">
                                            <span>‚úèÔ∏è</span>
                                            <span>G√ºncelle</span>
                                        </a>
                                        <button class="btn-danger"
                                            onclick="urunSil(<%= urun.id %>, '<%= urun.ad %>')">Sil</button>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } %>

                        <!-- √úr√ºn Detay Modal -->
                        <div id="productModal"
                            style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.8); z-index: 10000; justify-content: center; align-items: center;"
                            onclick="closeProductModal()">
                            <div style="background: rgba(45, 45, 45, 0.95); backdrop-filter: blur(20px); border-radius: 20px; max-width: 700px; width: 90%; max-height: 90vh; overflow-y: auto; border: 1px solid rgba(212, 175, 55, 0.4); box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);"
                                onclick="event.stopPropagation()">
                                <div style="padding: 30px;">
                                    <!-- Header -->
                                    <div
                                        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; padding-bottom: 20px; border-bottom: 2px solid rgba(212, 175, 55, 0.3);">
                                        <h2
                                            style="color: #F4E4BC; font-family: 'Playfair Display', serif; margin: 0; font-size: 1.8rem;">
                                            √úr√ºn Detaylarƒ±</h2>
                                        <button onclick="closeProductModal()"
                                            style="background: rgba(212, 175, 55, 0.2); border: 1px solid rgba(212, 175, 55, 0.4); color: #D4AF37; padding: 8px 16px; border-radius: 8px; cursor: pointer; font-size: 1rem; transition: all 0.2s;">
                                            ‚úï Kapat
                                        </button>
                                    </div>

                                    <!-- Content -->
                                    <div style="display: grid; gap: 25px;">
                                        <!-- Image Section -->
                                        <div>
                                            <div id="modalImage"
                                                style="width: 100%; height: 300px; background: rgba(26, 26, 26, 0.6); border-radius: 15px; display: flex; align-items: center; justify-content: center; overflow: hidden; border: 1px solid rgba(212, 175, 55, 0.2);">
                                                <span style="font-size: 4rem; color: rgba(212, 175, 55, 0.3);">üíé</span>
                                            </div>
                                        </div>

                                        <!-- Product Info -->
                                        <div>
                                            <div
                                                style="background: rgba(26, 26, 26, 0.4); padding: 20px; border-radius: 12px; border: 1px solid rgba(212, 175, 55, 0.2);">
                                                <div
                                                    style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px;">
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            √úr√ºn Kodu</div>
                                                        <div id="modalCode"
                                                            style="color: #F4E4BC; font-family: 'Courier New', monospace; font-size: 1.1rem; font-weight: 600;">
                                                            -</div>
                                                    </div>
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            √úr√ºn Adƒ±</div>
                                                        <div id="modalName" style="color: #F4E4BC; font-size: 1.1rem;">-
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            T√ºr</div>
                                                        <div id="modalType" style="color: #F4E4BC;">-</div>
                                                    </div>
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            Materyal</div>
                                                        <div id="modalMaterial" style="color: #F4E4BC;">-</div>
                                                    </div>
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            Fiyat</div>
                                                        <div id="modalPrice"
                                                            style="color: #D4AF37; font-size: 1.3rem; font-weight: 700; font-family: 'Playfair Display', serif;">
                                                            -</div>
                                                    </div>
                                                    <div>
                                                        <div
                                                            style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 5px;">
                                                            Stok</div>
                                                        <div id="modalStock" style="color: #F4E4BC;">-</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Description -->
                                        <div id="modalDescriptionContainer" style="display: none;">
                                            <div
                                                style="background: rgba(26, 26, 26, 0.4); padding: 20px; border-radius: 12px; border: 1px solid rgba(212, 175, 55, 0.2);">
                                                <div
                                                    style="color: #D4AF37; font-size: 0.85rem; font-weight: 600; margin-bottom: 10px;">
                                                    A√ßƒ±klama</div>
                                                <div id="modalDescription" style="color: #C0C0C0; line-height: 1.6;">-
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 Dilo≈üun Takƒ± D√ºnyasƒ±. T√ºm haklarƒ± saklƒ±dƒ±r.</p>
        </div>
    </footer>

    <script>
        // √úr√ºn detay modalƒ±nƒ± g√∂ster
        function showProductDetail(urun) {
            const modal = document.getElementById('productModal');

            // G√∂rsel
            const modalImage = document.getElementById('modalImage');
            if (urun.resim) {
                modalImage.innerHTML = `<img src="${urun.resim}" alt="${urun.ad}" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.parentElement.innerHTML='<span style=\\'font-size: 4rem; color: rgba(212, 175, 55, 0.3);\\'>üíé</span>'">`;
            } else {
                modalImage.innerHTML = '<span style="font-size: 4rem; color: rgba(212, 175, 55, 0.3);">üíé</span>';
            }

            // Bilgiler
            document.getElementById('modalCode').textContent = urun.urun_kodu || '-';
            document.getElementById('modalName').textContent = urun.ad;
            document.getElementById('modalType').textContent = urun.tur.charAt(0).toUpperCase() + urun.tur.slice(1);
            document.getElementById('modalMaterial').textContent = urun.materyal.charAt(0).toUpperCase() + urun.materyal.slice(1);
            document.getElementById('modalPrice').textContent = urun.fiyat.toLocaleString('tr-TR') + ' ‚Ç∫';
            document.getElementById('modalStock').textContent = urun.stok + ' adet';

            // A√ßƒ±klama
            const descContainer = document.getElementById('modalDescriptionContainer');
            const descText = document.getElementById('modalDescription');
            if (urun.aciklama) {
                descText.textContent = urun.aciklama;
                descContainer.style.display = 'block';
            } else {
                descContainer.style.display = 'none';
            }

            // Modalƒ± g√∂ster
            modal.style.display = 'flex';
        }

        // Modalƒ± kapat
        function closeProductModal() {
            document.getElementById('productModal').style.display = 'none';
        }

        // ESC tu≈üu ile kapat
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeProductModal();
            }
        });

        // √úr√ºn arama fonksiyonu
        const aramaInput = document.getElementById('urun-arama');
        const urunTbody = document.getElementById('urun-tbody');
        let aramaTimeout;

        if (aramaInput) {
            aramaInput.addEventListener('input', (e) => {
                clearTimeout(aramaTimeout);
                const query = e.target.value.trim();

                if (!query) {
                    // Bo≈üsa sayfayƒ± yenile
                    location.reload();
                    return;
                }

                aramaTimeout = setTimeout(() => {
                    fetch(`/api/admin/urun/ara?q=${encodeURIComponent(query)}`)
                        .then(res => res.json())
                        .then(urunler => {
                            if (urunler.length === 0) {
                                urunTbody.innerHTML = '<tr><td colspan="8" style="text-align: center; color: #C0C0C0;">Sonu√ß bulunamadƒ±.</td></tr>';
                                return;
                            }

                            urunTbody.innerHTML = urunler.map(urun => `
                                <tr style="cursor: pointer;" onclick='showProductDetail(${JSON.stringify(urun)})'>
                                    <td>${urun.id}</td>
                                    <td><span style="font-family: 'Courier New', monospace; color: #D4AF37; font-weight: 600;">${urun.urun_kodu || '-'}</span></td>
                                    <td>${urun.ad}</td>
                                    <td>${urun.tur.charAt(0).toUpperCase() + urun.tur.slice(1)}</td>
                                    <td>${urun.materyal.charAt(0).toUpperCase() + urun.materyal.slice(1)}</td>
                                    <td>${urun.fiyat.toLocaleString('tr-TR')} ‚Ç∫</td>
                                    <td>${urun.stok}</td>
                                    <td onclick="event.stopPropagation()">
                                        <a href="/admin/urun/guncelle/${urun.id}" class="btn btn-success" style="text-decoration: none; display: inline-flex; align-items: center; gap: 6px; margin-right: 5px;">
                                            <span>‚úèÔ∏è</span>
                                            <span>G√ºncelle</span>
                                        </a>
                                        <button class="btn-danger" onclick="urunSil(${urun.id}, '${urun.ad}')">Sil</button>
                                    </td>
                                </tr>
                            `).join('');
                        })
                        .catch(err => {
                            console.error('Arama hatasƒ±:', err);
                        });
                }, 300);
            });
        }

        function urunSil(urunId, urunAd) {
            if (!confirm(`"${urunAd}" adlƒ± √ºr√ºn√º silmek istediƒüinize emin misiniz?`)) {
                return;
            }

            fetch('/admin/urun/sil', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    urun_id: urunId
                })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert('√úr√ºn silindi.');
                        location.reload();
                    } else {
                        alert(data.message || '√úr√ºn silinemedi.');
                    }
                })
                .catch(err => {
                    console.error('Hata:', err);
                    alert('Bir hata olu≈ütu.');
                });
        }
    </script>
</body>

</html>