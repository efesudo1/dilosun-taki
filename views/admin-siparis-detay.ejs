                <div class="user-menu">
                    <div class="user-info">
                        <span class="user-name">
                            <%= kullanici.ad ? kullanici.ad + ' ' + (kullanici.soyad || '') : kullanici.email %>
                            <span class="badge-admin">Admin</span>
                        </span>
                        <div class="header-links">
                            <a href="/">Ana Sayfa</a>
                            <a href="/logout">√áƒ±kƒ±≈ü Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="admin-nav">
            <a href="/admin" class="nav-item">Dashboard</a>
            <a href="/admin/urunler" class="nav-item">√úr√ºnler</a>
            <a href="/admin/urun/ekle" class="nav-item">√úr√ºn Ekle</a>
            <a href="/admin/kullanicilar" class="nav-item">Kullanƒ±cƒ±lar</a>
            <a href="/admin/siparisler" class="nav-item">Sipari≈üler</a>
        </div>

        <div class="admin-content">
            <div style="margin-bottom: 20px;">
                <a href="/admin/siparisler" style="color: #D4AF37; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; padding: 8px 16px; background: rgba(212, 175, 55, 0.1); border-radius: 8px; border: 1px solid rgba(212, 175, 55, 0.3); transition: all 0.3s ease;" 
                   onmouseover="this.style.background='rgba(212, 175, 55, 0.2)'; this.style.borderColor='rgba(212, 175, 55, 0.5)'"
                   onmouseout="this.style.background='rgba(212, 175, 55, 0.1)'; this.style.borderColor='rgba(212, 175, 55, 0.3)'">
                    <span>‚Üê</span>
